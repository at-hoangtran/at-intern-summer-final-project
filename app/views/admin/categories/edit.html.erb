<% provide :title, "Trang quản trị - Sủa danh mục" %>
<%= javascript_include_tag "validation/admin/category/form" %>
<%= javascript_include_tag "admin/category/category_details" %>
<% provide :button_text, t("admin.categories.btn-edit") %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
		<ol class="breadcrumb">
			<li>
				<%= link_to raw('<i class="fa fa-home"></i> ' + t(".home")), admin_categories_path %>
			</li>
			<li class="active"><%= t ".updatetext" %></li>
			</ol>
		</div>
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">
				<small><%= t ".updatetext" %></small></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= form_for @category, url: admin_category_path, :html => {:id => "frmCategory", :class => "form-horizontal"} do |f| %>
					 <%= render partial: "admin/categories/shared/form", locals: {f: f} %>
					<% end %>
					<%= render "admin/categories/shared/modal" %>
				</div>
			</div>
		</div>
	</div>
</div>
