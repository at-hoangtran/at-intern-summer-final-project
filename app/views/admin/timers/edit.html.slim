- provide :title, "Trang quản trị - Cập nhật thời gian"
- provide :button_text, "Cập nhật"
= javascript_include_tag "include/validation/admin/timer/form"
.col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
  .row
    ol.breadcrumb
      li
        = link_to content_tag(:i, "Home", class: "fa fa-home"), admin_root_path
      li.active
        | Cập nhật thời gian
  .row
    .col-lg-12
      h1.page-header
        small
          | Cập nhật thời gian
  .row
    .col-lg-12
      .panel.panel-default
        .panel-body
          .col-lg-5
            = form_for @timer, url: admin_timer_path(@timer.id), html: {id: "frmTimer", class: "form-horizontal", method: :put} do |f|
              = render partial: "admin/timers/shared/form", locals: {f: f}
= javascript_include_tag "include/lib/simple.money.format"
