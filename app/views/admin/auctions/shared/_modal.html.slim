#detailsModal.modal.fade.bs-example-modal-lg[tabindex="-1" role="dialog" aria-labelledby="myModalLabel"]
  .modal-dialog.modal-lg[role="document"]
    .modal-content
      .modal-header
        button.close[type="button" data-dismiss="modal" aria-label="Close"]
          span[aria-hidden="true"]
            | Ã—
        h4#myModalLabel.modal-title
          = t(".auction-detail")
      .modal-body
        table#table-scl.table.table-hover
          thead
            tr
              th
                | ID
              th
                = t(".user")
              th
                = t(".money")
              th
                = t(".status")
              th
                | Action
          tbody#viewLoad
      .modal-footer
        button.btn.btn-default[type="button" data-dismiss="modal"]
          = t(".close")

  script#data-template[type="x-tmpl-mustache"]
    tr
      td
        | {{ID}}
      td
        | {{NAME}}
      td
        | {{BID}}
      td
        | {{#STATUS}}
        span.label.label-warning
          = t(".loser")
        | {{/STATUS}} {{#STATUS1}}
        span.label.label-info
          = t(".winer")
        | {{/STATUS1}}
      td
        = button_tag(type: "button", class: "remove-item btn btn-danger", "remove-id": "{{ID}}") do
            = content_tag(:i, nil, class: "fa fa-trash fa-1x")
