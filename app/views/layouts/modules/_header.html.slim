nav#main-Nav.navbar.navbar-top.banner-menu[role="navigation"]
  .container
    .row
      .navbar-header
        span#grouped-one.visible-xs.pull-left[onclick="openNav()"]
          | ☰
        span#grouped-two.visible-xs.pull-right

      #main-mav-top.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            = link_to content_tag(:b, nil, class: "glyphicon glyphicon-home") + " AuctionHouse", root_url, :id => "mlinkhome"
        ul.nav.navbar-nav.pull-right
          - if size_cart.nil?
            li
              = link_to content_tag(:i, " (0) ", id: "count-order", class: "fa fa-cart-plus") + " " + t(".cart"), "/orders"
          - else
            li
              = link_to content_tag(:i, " (#{size_cart}) ", id: "count-order", class: "fa fa-cart-plus") + " " + t(".cart"), "/orders"
          li
            = link_to content_tag(:i, nil, class: "fa fa-gavel") + " " + t(".my-auctions"), auctions_path
          - if logged_in?
            li.dropdown
              a.dropdown-toggle[href="#" data-toggle="dropdown" role="button" aria-expanded="false"]
                span
                  = t(".welcome") + " " + "#{current_user.name}"
                span.caret
              ul.dropdown-menu[role="menu"]
                - if admin?
                  li
                    = link_to t(".admin-page"), admin_root_path
                li
                  = link_to t(".profile"), edit_user_path(current_user)
                li
                  = link_to t(".orders"), history_orders_path
                li
                  = link_to t(".logout"), logout_path, method: :delete
                li.divider
                li
                  = link_to content_tag(:span, nil,class: "flag-icon flag-icon-vn") + content_tag(:span, " Việt nam"), locale:"vi"
                li
                  = link_to content_tag(:span, nil,class: "flag-icon flag-icon-us") + content_tag(:span, " English"), locale:"en"
          - else
            li
              = link_to t(".login")
nav#main-Nav.navbar.navbar-top.category-menu[role="navigation"]
  .container
    .row
      #main-mav-top.navbar-collapse
        ul.nav.navbar-nav
          = render partial: "layouts/modules/category", collection: @categories, as: "category"
        - if @search
          .box-input-search
            input.form-control[type="text" class="input-search" placeholder="#{t(".search")}" aria-label="Search"]

#mySidenav.sidenav
  a.closebtn[href="javascript:void(0)" onclick="closeNav()"]
    | ×
    = t(".close")
  br
  br
  - if logged_in?
    a[href="#"]
      = t(".welcome") + " " + "#{current_user.name}"
  br
  hr
  - if size_cart.nil?
      = link_to content_tag(:i, " (0) ", id: "count-order", class: "fa fa-cart-plus") + " " + t(".cart"), "/orders"
  - else
    = link_to content_tag(:i, " (#{size_cart}) ", id: "count-order", class: "fa fa-cart-plus") + " " + t(".cart"), "/orders"
  = link_to content_tag(:i, nil, class: "fa fa-gavel") + " " + t(".my-auctions"), auctions_path
  = link_to content_tag(:i, nil, class: "fa fa-list-alt") + " " + t(".orders"), history_orders_path
  hr
  - if logged_in?
    - if admin?
      = link_to content_tag(:i, nil, class: "fa fa-male") + " " + t(".admin-page"), admin_root_path
    = link_to content_tag(:i, nil, class: "fa fa-address-book-o") + " " + t(".profile"), edit_user_path(current_user)
    = link_to content_tag(:i," " + t(".logout"), class: "fa fa-btn fa-sign-out"), logout_path, method: :delete
    hr
    = link_to content_tag(:span, nil,class: "flag-icon flag-icon-vn") + content_tag(:span, " Việt nam"), locale:"vi"
    = link_to content_tag(:span, nil,class: "flag-icon flag-icon-us") + content_tag(:span, " English"), locale:"en"
